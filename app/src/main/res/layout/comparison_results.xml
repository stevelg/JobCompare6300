<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral30">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/TextCompareJobsID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/compare_job_offers"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="20dp"
            android:background="#2962FF">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:background="#260455"
                    android:padding="10sp"
                    android:text=" "
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#260455"
                    android:gravity="center"
                    android:text="@string/offer_1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#260455"
                    android:gravity="center"
                    android:text="@string/offer_2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="@string/title"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <AutoCompleteTextView
                    android:id="@+id/compareResultsTitle1"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
                <AutoCompleteTextView
                    android:id="@+id/compareResultsTitle2"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="@string/company"
                    android:textColor="@color/white"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp" />
                <AutoCompleteTextView
                    android:id="@+id/compareResultsCompany1"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
                <AutoCompleteTextView
                    android:id="@+id/compareResultsCompany2"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="@string/location"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <AutoCompleteTextView
                    android:id="@+id/compareResultsLocation1"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
                <AutoCompleteTextView
                    android:id="@+id/compareResultsLocation2"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="@string/cost_of_living"
                    android:textColor="@color/white"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp" />
                <AutoCompleteTextView
                    android:id="@+id/compareResultsLivingCost1"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
                <AutoCompleteTextView
                    android:id="@+id/compareResultsLivingCost2"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="@string/yearly_salary"
                    android:textColor="@color/white"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp" />
                <AutoCompleteTextView
                    android:id="@+id/compareResultsYSalary1"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
                <AutoCompleteTextView
                    android:id="@+id/compareResultsYSalary2"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="@string/yearly_bonus"
                    android:textColor="@color/white"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp" />
                <AutoCompleteTextView
                    android:id="@+id/compareResultsYBonus1"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
                <AutoCompleteTextView
                    android:id="@+id/compareResultsYBonus2"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="@string/restricted_stock_unit"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <AutoCompleteTextView
                    android:id="@+id/compareResultsRSU1"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
                <AutoCompleteTextView
                    android:id="@+id/compareResultsRSU2"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="@string/relocation_stipend"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <AutoCompleteTextView
                    android:id="@+id/compareResultsRelocation1"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
                <AutoCompleteTextView
                    android:id="@+id/compareResultsRelocation2"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="@string/personal_holidays"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <AutoCompleteTextView
                    android:id="@+id/compareResultsHolidays1"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
                <AutoCompleteTextView
                    android:id="@+id/compareResultsHolidays2"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/compareResultsNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="handleNewComparisonClick"
                android:text="@string/new_comparison" />

            <Button
                android:id="@+id/compareResultsCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="handleCancelClick"
                android:text="home" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>